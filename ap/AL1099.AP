RECORD
	ENTRY	,A2
	INXCTL	,D1
	LNFEED	,D2
	LPSW	,D1
	PLINE	,A80
	RETCOD	,D1
	SPLFIL	,A14
	LOKCTL	,D1
	READ	,D1,	0
	WRITE	,D1,	1
	V	,D1
	X	,A28	,'XXXXXXXXXXXXXXXXXXXXXXXXXXXX'
	RPTNUM	,D3
	PRTTYP	,A1
	PGCNT	,D3
	LINCNT	,D3
	FORM	,D1
PROC
	XCALL TERID (V)
	V = 1
	XCALL OUTPT(1,1,2,'PRINT FEDERAL 1099 FORMS',V)
	XCALL MOUNT ('1099 FORMS','PRINTER')
	GO TO FIRST				;AP21
BEGIN,
	LPSW = 5
	XCALL LPON (LPSW,SPLFIL)
	GO TO (ENDOFF), LPSW + 1
;	XCALL WATE(3,V)				;AP21
	XCALL WATE(2,V)				;AP21
;	GOTO FIRST				;AP29
FORM,
	INCR FORM
;	LNFEED = 3				;AP21
	PLINE =					;AP21
	CALL PRINT				;AP21
	LNFEED = 2				;AP21
	CALL LINFD
	PLINE(1,28) = X
	CALL PRINT
	LNFEED = 1
	CALL LINFD
	PLINE(1,28) = X
	CALL PRINT
	LNFEED = 1
	CALL LINFD
	PLINE(1,28) = X
	CALL PRINT
	LNFEED = 1
	CALL LINFD
	PLINE(1,10) = 'XX-XXXXXXX'
	PLINE (18,28) = 'XXX-XX-XXXX'		;AP29
	CALL PRINT
