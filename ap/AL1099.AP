	CALL LINFD
	PLINE(1,28) = X
	PLINE (35,46) = 'X,XXX,XXX.XX'		;AP29
	CALL PRINT
	LNFEED = 1
	CALL LINFD
;	PLINE(1,28) = X
	PLINE (1,29) = 'XXXXXXXXXXXXXXX,XX XXXXX-XXXX'		;AP29
	CALL PRINT
	LNFEED = 5
	CALL LINFD
	IF (FORM.LT.02) GO TO FORM
;	IF (LPSW.EQ.01) LPSW = 6			;AP21
;	IF (LPSW.EQ.-3) LPSW = 7			;AP21
	XCALL LPOFF (LPSW,SPLFIL,PGCNT)			;AP21
	FORM =
FIRST,
	XCALL OUTPT(12,20,2,'PRINT AN ALIGNMENT FORM ?',1)
	XCALL INPUT(12,47,01,00,'YN',ENTRY,INXCTL,V)
;	GO TO (FORM), INXCTL				;AP21
	GO TO (BEGIN), INXCTL				;AP21
	XCALL WATE(3,V)
	XCALL PGCHN('AP:PR1099',1)
ENDOFF,
	XCALL MOUNT ('REGULAR PAPER','PRINTER')
	XCALL LPOFF (LPSW,SPLFIL,PGCNT)
	XCALL PGCHN('AP:APMENU',1)
PRINT,
	LINCNT =
	XCALL LPOUT (LINCNT,PGCNT,PLINE,'NO TITLE','NO HDR',' ',' ',
&		     'NO LEGEND',' ',' ',0,80,80,0,LPSW,RPTNUM,PRTTYP)
