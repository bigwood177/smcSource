;TEST.DBL
;	CALL HP TEST
;
RECORD	FONTS
	FONT_STD	,D18
	FONT_BIG	,D18

RECORD	VARS
	FONT_LOG	,A18
	LEN		,D4
	PLINE		,A80
PROC
	OPEN (15,I,'TT:')
	XCALL GETLOG("HP_STD",FONT_LOG,LEN)
	FONT_STD = FONT_LOG
	XCALL GETLOG("HP_BIG",FONT_LOG,LEN)
	FONT_BIG = FONT_LOG

	OPEN (14,O,'TEST.SPL')

	XCALL HP (14,hpFONT,FONT_STD)
	XCALL HP (14,hpPOS,1,1,"This is the STD size font")
	XCALL HP (14,hpFONT,hpBOLD)
	XCALL HP (14,hpPOS,2,1,"This is the STD size font - BOLD")
	XCALL HP (14,hpFONT,hpMEDIUM)
	XCALL HP (14,hpFONT,hp8CPI)
	XCALL HP (14,hpPOS,2,1,"This is the 8CPI size font - MEDIUM")
	XCALL HP (14,hpFONT,hpBOLD)
	XCALL HP (14,hpPOS,2,1,"This is the 8CPI size font - BOLD")

