;POMENU.PO
;
;
;
EXTERNAL FUNCTION
	CHK_SEC	,D

RECORD
	AUTH,D1	;1=OK, 0=NOT AUTHORIZED		;3-11-19

;
RECORD
	ENTRY	,A3
	INXCTL	,D1
	PGM	,D2
;;;	PROGNM	,7A9,	'PO:POENMN','PO:POALGN','PO:POSCRG','PO:PORECV',
	PROGNM	,10A9,	'PO:POADDH','PO:POEDLS','PO:POSCRG','PO:PORECV',
&			'PO:POTBLM','PO:RECENT','PO:POCLOS','PO:POCANC',
&			'PO:POINQR','PO:POSFMN'
;;;&			'PO:PORINQ','PO:POSFMN'
	RESTRT	,D1
	V	,D1
	NXTPGM	,A9
	SWITCH	,D1
	LOKCTL	,D1
	READ	,D1,	0
PROC
	XCALL TERID (V)
	V = 1	
BEGIN,
	XCALL OUTPT (1,1,2,'PURCHASE ORDERS',1)
	XCALL OUTPT ( 3,20,0,'PLEASE SELECT FUNCTION',V)
;~START MENU
	XCALL OUTPT ( 5,25,0,'1. PURCHASE ORDER ENTRY',V)
	XCALL OUTPT ( 7,25,0,'2. PRINT PURCHASE ORDER EDIT LIST',V)
	XCALL OUTPT ( 9,25,0,'3. SCHEDULED RECEIPTS REPORTS',V)
	XCALL OUTPT (11,25,0,'4. RECEIPTS ENTRY',V)
	XCALL OUTPT (13,25,0,'5. TABLES MAINTENANCE',V)
	XCALL OUTPT (15,25,0,'6. INVENTORY TRANSACTION ENTRY & EDITING',V)
	XCALL OUTPT (17,25,0,'7. CLOSE PURCHASE ORDERS',V)
	XCALL OUTPT (19,25,0,'8. CANCEL PURCHASE ORDERS',V)
	XCALL OUTPT (21,25,0,'9. PURCHASE ORDER INQUIRY',V)
	XCALL OUTPT (23,24,0,'10. SPECIAL FUNCTIONS',V)
;~END MENU
INPUT,
	XCALL INPUT (3,44,2,0,'#E',ENTRY,INXCTL,V)
	GO TO (INPUT,EXIT), INXCTL
	PGM = ENTRY (1,2)
	IF (PGM.LT.1.OR.PGM.GT.10) GO TO INPUT

	AUTH = %CHK_SEC ('PO','POMENU', PGM)
	IF (.NOT. AUTH) 
		BEGIN
		XCALL MESAG ('NOT AUTHORIZED FOR THIS SELECTION',1)
		GOTO BEGIN
		END

	RESTRT = 1
	XCALL PGCHN (PROGNM(PGM),RESTRT)
;**********************************************************************
EXIT,
	RESTRT = 1
	XCALL PGCHN ('UT:MSMENU',RESTRT)
;**********************************************************************

END

