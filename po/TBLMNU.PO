; TBLMNU / COP 
;
;
;		PO TABLES MENU
;
RECORD
	V	,D1
	ENTRY	,A3
	INXCTL	,D1
	PGM	,D2
	PROGNM	,8A9,	'PO:VCNMNT','PO:P1TMNT','PO:PNNMNT','PO:XXXXXX',
&			'PO:XXXXXX','PO:XXXXXX','PO:XXXXXX','PO:XXXXXX'
PROC
	XCALL TERID (V)
	XCALL OUTPT (1,1,2,'PURCHASE ORDER PROCESSING - TABLES',V)
	XCALL OUTPT (3,9,0,'PLEASE SELECT APPLICATION',1)
	XCALL OUTPT ( 5,15,0,' 1. VENDOR CONTACTS TABLE',1)
	XCALL OUTPT ( 6,15,0,' 2. SHIP VIA - SCAC CODE TABLE',1)
	XCALL OUTPT ( 7,15,0,' 3. RESET NEXT PO NUMBER',1)

INPUT,
	XCALL INPUT (3,36,1,1,'#E',ENTRY,INXCTL,1)
	GOTO (INPUT,ENDOFF), INXCTL
	PGM = ENTRY(1,1)
	IF (PGM.LT.1.OR.PGM.GT.3) GOTO INPUT
	XCALL WATE (3,V)
	XCALL PGCHN (PROGNM (PGM),1)
ENDOFF,
	XCALL WATE(3,V)
	XCALL PGCHN ('PO:POSFMN',1)
END
