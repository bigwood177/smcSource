;PNNMNT.PO
;
;	NEXT PO NUMBER BY USER
;
RECORD	COPTBL
	.INCLUDE 'DEF:RD182A.DEF'

RECORD	CHANNEL
	CHN182	,D2

RECORD	PRINT
	TITLE	,A*,	'NEXT PO NUMBER'
	HD	,A6,	'NO HDR'
	LG	,A9,	'NO LEGEND'
	PLINE	,A80
	PRNTON	,D1
	LINCNT	,D2,60
	PGCNT	,D6
	LPSW	,D2
	SPLFIL	,A14
	RPTNUM	,D3
	PRTTYP	,A1
	PRTCTL	,D3,080
	LPARG	,D1
	PRNTSW	,D1
	PRTCTR	,D1


RECORD	HD1
		,A*,	'   MARTY    JESSIE   STEVE-E    OTHERS'
;;;		,A*,	'   MARTY    MIKE-M   STEVE-E    OTHERS'

RECORD	VARS
	filnam	,a14
	ALPHA	,A12
	OPNOK	,D1
	BLANKS	,A15
	PGM	,D1
	ROW	,D2
	ENTRY	,A30
	INXCTL	,D1
	READ	,D1,0
	WRITE	,D1,1
	STORE	,D1,2
	DELETE	,D1,3
	LOKCTL	,D1
	WHATNO	,D2
	SELECT	,D1
	CNGCTL	,D1
	I	,D3
	SWITCH	,D1
	V	,D1

PROC
	XCALL TERID (V)
	XCALL OUTPT (1,1,2,TITLE,1)

	CALL OPENS
	IF (.NOT. OPNOK) GOTO CLOSE

MENU,
	XCALL OUTPT (1,1,2,TITLE,1)
	XCALL OUTPT (3,9,0,'PLEASE SELECT APPLICATION',1)
	XCALL OUTPT (5,15,0,'1. TABLE MAINTENANCE',1)
	XCALL OUTPT (6,15,0,'2. PRINT TABLE',1)
MINPUT,
	XCALL INPUT (3,36,1,1,'#E',ENTRY,INXCTL,1)
	GOTO (MINPUT,ENDOFF), INXCTL
	PGM = ENTRY(1,1)
;;;	GOTO (DISPLA,PRINT_TABLE),PGM
	GOTO (MAINT,PRINT_TABLE),PGM
	GOTO MINPUT
MAINT,
	CALL PAINT

	CLEAR TBL_KEY
	TBLCOD = 'PN'
	XCALL ISIO (CHN182,COPTBL,TBL_KEY,READ,LOKCTL)
	IF (LOKCTL .EQ. 0) 
	THEN	BEGIN
		SELECT = 2
		CALL DSPREC
		GOTO ANYCNG
		END
	ELSE	BEGIN
		SELECT = 1
		CLEAR COPTBL
		END

DISPLA,
	CLEAR CNGCTL
	CALL PAINT

PN_NO1,
	XCALL INPUT (4,16,06,00,'#E',ENTRY,INXCTL,1)
	GOTO (DISPLA,MENU),INXCTL
	PN_NO1 = ENTRY(1,6)
	GOTO (ANYCNG),CNGCTL

PN_NO2,
	XCALL INPUT (6,16,06,00,'# ',ENTRY,INXCTL,1)
	GOTO (DISPLA),INXCTL
	PN_NO2 = ENTRY(1,6)
	GOTO (ANYCNG),CNGCTL

PN_NO3,
	XCALL INPUT (8,16,06,00,'# ',ENTRY,INXCTL,1)
	GOTO (DISPLA),INXCTL
	PN_NO3 = ENTRY(1,6)
	GOTO (ANYCNG),CNGCTL

PN_NO4,
	XCALL INPUT (10,16,06,00,'# ',ENTRY,INXCTL,1)
	GOTO (DISPLA),INXCTL
	PN_NO4 = ENTRY(1,6)
	GOTO (ANYCNG),CNGCTL

ANYCNG,
	XCALL OUTPT (24,1,1,'FIELD # TO CHANGE            <TAB> = DELETE',1)
	XCALL INPUT (24,20,02,00,'#T',ENTRY,INXCTL,1)
	IF (INXCTL .EQ. 3)
		BEGIN
		XCALL OUTPT (24,1,1,'DELETE, ARE YOU SURE ?',1)
		XCALL INPUT (24,24,01,01,'YN',ENTRY,INXCTL,1)
		GOTO (ANYCNG),INXCTL-1
		XCALL ISIO (CHN182,COPTBL,TBL_KEY,DELETE,LOKCTL)
		GOTO DISPLA
		END

	WHATNO = ENTRY(1,2)
	IF (WHATNO .EQ. 0)
	THEN 	CLEAR CNGCTL
	ELSE 	CNGCTL = 1

	GOTO (PROCES,CNGBR),CNGCTL+1
CNGBR,
	GOTO (PN_NO1, PN_NO2, PN_NO3, PN_NO4),WHATNO
	GOTO ANYCNG

PROCES,
	CASE SELECT OF
	BEGINCASE
	1:	BEGIN
		TBLCOD = 'PN'
		XCALL ISIO (CHN182,COPTBL,TBL_KEY,STORE,LOKCTL)
		END
	2:	XCALL ISIO (CHN182,COPTBL,TBL_KEY,WRITE,LOKCTL)
	ENDCASE
	GOTO DISPLA

ENDOFF,
	CALL CLOSE
	XCALL PGCHN ('PO:TBLMNU',1)
	STOP



DSPREC,	;;;;;;;;;;;;;;;;;;;;;;;;;;;;
	;;; DISPLAY RECORD
	;;;;;;;;;;;;;;;;;;;;;;;;;;;;

	XCALL OUTPT ( 4,4,0,'1. MARTY',1)
	XCALL OUTPT ( 6,4,0,'2. JESSIE',1)
;;;	XCALL OUTPT ( 6,4,0,'2. MIKE M',1)

	XCALL OUTPT ( 8,4,0,'3. STEVE E',1)
	XCALL OUTPT (10,4,0,'4. OTHERS',1)

	ENTRY(1,6) = PN_NO1,	'ZZZZZZ' [LEFT]
	XCALL OUTPT ( 4,16,0,ENTRY(1,6),1)
	ENTRY(1,6) = PN_NO2,	'ZZZZZZ' [LEFT]
	XCALL OUTPT ( 6,16,0,ENTRY(1,6),1)
	ENTRY(1,6) = PN_NO3,	'ZZZZZZ' [LEFT]
	XCALL OUTPT ( 8,16,0,ENTRY(1,6),1)
	ENTRY(1,6) = PN_NO4,	'ZZZZZZ' [LEFT]
	XCALL OUTPT (10,16,0,ENTRY(1,6),1)

	RETURN
;-----------------------------------

PAINT,	;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
	XCALL OUTPT (1,1,2,TITLE,1)
	XCALL OUTPT ( 4,4,0,'1. MARTY',1)
	XCALL OUTPT ( 6,4,0,'2. JESSIE',1)
;;;	XCALL OUTPT ( 6,4,0,'2. MIKE M',1)
	XCALL OUTPT ( 8,4,0,'3. STEVE E',1)
	XCALL OUTPT (10,4,0,'4. OTHERS',1)
	RETURN
;--------------------------------------------

;===================================================================
PRINT_TABLE,
;===================================================================
	LINCNT = 66
	PGCNT  = 0
	
P_PRINT,
	CLEAR TBL_KEY
	TBLCOD = 'PN'
	FIND (CHN182,COPTBL,TBL_KEY)[ERR=PLOOP]

PLOOP,
	XCALL IOS (CHN182,COPTBL,READ,LOKCTL)
	IF (LOKCTL .NE. 0) GOTO EOF
	IF (TBLCOD .NE. 'PN') GOTO EOF
	PLINE(3,8) = PN_NO1,	'ZZZZZX'
	PLINE(13,18) = PN_NO2,	'ZZZZZX'
	PLINE(23,28) = PN_NO3,	'ZZZZZX'
	PLINE(33,38) = PN_NO4,	'ZZZZZX'

;   MARTY    MIKE-M   STEVE-E    OTHERS
;  ZZZZZZ    ZZZZZZ    ZZZZZZ    ZZZZZZ
;12345678901234567890123456789012345678901234567890123456789012345678901234567890
;         1         2         3         4         5         6         7         8
	CALL PRINT
	GOTO PLOOP

EOF,
	IF (PRNTON.EQ.1)  XCALL LPOFF(LPSW,SPLFIL,PGCNT)
	PRNTON  = 0

PDONE,
	GOTO MENU

PRINT,	;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
	IF (PRNTON .EQ. 0) CALL PRNTON
	XCALL LPOUT(LINCNT,PGCNT,PLINE,TITLE,HD1,HD,HD
&		,LG,LG,LG,0,080,PRTCTL,0,LPSW,RPTNUM,PRTTYP)
	RETURN
;-------------------------------------------------------------
PRNTON,
	SPLFIL (5,6) = 'EF'
	LPSW = 1		;PRINT,SPOOL, OR DISPLAY
	XCALL LPON (LPSW,SPLFIL)
	IF (LPSW.EQ.0) GOTO ENDOFF
	LPARG = 2
	IF (LPSW.EQ.2) LPARG = 4
	XCALL WATE (LPARG,V)
	PRNTON = 1
	RETURN
;-------------------------------------------------------------
;===================================================================


OPENS,	;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
	CLEAR OPNOK

;;;	SWITCH = 5
;;;	XCALL FILES (1,'SU',182,SWITCH)
;;;	IF (SWITCH .EQ. 9) RETURN

	clear switch
	XCALL FFILE(182,FILNAM,SWITCH)
	filnam(5,5) = 'P'		;coptbl => poptbl 5-2-06 ssq
	FILNAM(14,14) = 'M'
	open (1, su, filnam)

	CHN182 = 1

	OPNOK = 1
	RETURN
;----------------------------------------------------

CLOSE,
	CLOSE CHN182
	RETURN
;----------------------------------------------------
