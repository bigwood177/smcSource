RECORD	PORLIN
	.INCLUDE 'DEF:RD152A.DEF'

RECORD	FFILE
	FILNUM	,D3
	CLCTL	,D1
	REDFIL	,A14

RECORD SNDMSG
		,A3
		,A6
	RCNT	,D5
	OCNT	,D5
	MFIL	,D3
		,A3

RECORD,X
	PRGNAM	,A9

RECORD	HEADER
		,A7,	'DBSORT '
	HFILE	,A14

RECORD	VARS
	V	,D1
	MSG	,A14
	XFIL	,D3,	152
	SWITCH	,D1
	TNUM	,D3


PROC
	XCALL TERID (V)
	XCALL TNMBR(TNUM)

	SWITCH = 1
	XCALL SNMSG (SNDMSG,SWITCH)	;GET MESSAGE, IF ANY
	IF (SWITCH .EQ. 9) 
	THEN	BEGIN
		FILNUM = XFIL
		END
	ELSE	BEGIN
		FILNUM = MFIL
		SWITCH = 3
		XCALL SNMSG (' ',SWITCH)	;DELETE MESSAGE
		END
NOMSG,
	FILNUM = 152
	XCALL FFILE (FILNUM,REDFIL,CLCTL)	;GET FILE SPEC
	REDFIL(1,3) = 'DPO'
	REDFIL(12,14) = TNUM,'XXX'
	HFILE = REDFIL

	XCALL OUTPT (2,1,2,HEADER,1)
	SORT (IN=REDFIL, RECORD=PORLIN, 
&		KEY=(LPONUM,LRLNUM,LLINNO), END="]]]]]]" )

	XCALL PGCHN (PRGNAM,1)
	END

