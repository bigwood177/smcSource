RECORD HEADER		
	.INCLUDE 'DEF:RD151A.DEF'


RECORD CTL
	ROW	,D2
		,A1
	COL	,D2
		,A1
	MAX	,D2
		,A1
	MIN	,D2
		,A1
	TYPE	,A2

RECORD	POHEDR
	.INCLUDE 'DEF:RD151C.DEF'

RECORD
;;;	POHEDR	,A142
	OPT	,D1
	EXITSW	,D1
	UPDSW	,D1
	INXCTL	,D1
	V	,D1
	BSMID	,D5
	ENTRY	,A6
	SRCCTL	,D1
	RESTRT	,D1
	SWITCH	,D1
	READ	,D1,0
	WRITE	,D1,1
	LOKCTL	,D1
	PONUM	,D8
	SRCOPT	,D1
	HRCNUM	,D5
	BLANKS	,A10
PROC
	XCALL TERID (V)
	V = 1

	SWITCH = 2
	XCALL FILES (1,'SU',151,SWITCH)
	IF (SWITCH.EQ.9)
		BEGIN
		XCALL MESAG ('MAIN PURCHASE ORDER FILES IN USE',1)
		GOTO INUSE1
		END
	SWITCH = 2
	XCALL FILES (2,'SU',152,SWITCH)
	IF (SWITCH.EQ.9)
		BEGIN
		XCALL MESAG ('MAIN PURCHASE ORDER FILES IN USE',1)
		GOTO INUSE2
		END
	SWITCH = 1
	XCALL FILES (3,'I',153,SWITCH)
	IF (SWITCH.EQ.9) GO TO INUSE3

	SWITCH = 1
	XCALL FILES (6,'I',042,SWITCH)
	IF (SWITCH.EQ.9) GO TO INUSE6

	SWITCH = 1
	XCALL FILES (7,'I',041,SWITCH)
	IF (SWITCH.EQ.9) GO TO INUSE7

	SWITCH = 1
	XCALL FILES (8,'SI',061,SWITCH)
	IF (SWITCH.EQ.9) GO TO INUSE8

	SWITCH = 1
	XCALL FILES (9,'SU',192,SWITCH)
	IF (SWITCH.EQ.9) GO TO INUSE9

;;;	SWITCH = 5
;;;	XCALL FILES (10,'SI',249,SWITCH)
;;;	IF (SWITCH .EQ. 9) GOTO INUS10

BEGIN,
	XCALL OUTPT (1,1,3,'PURCHASE ORDER ENTRY',V)
	XCALL OUTPT (2,1,0,'CHANGE/INQUIRE P/O LINE',V)
	XCALL OUTPT (08,20,0,'PLEASE ENTER P/O NUMBER:',V)

	CTL = '10,25,06,00,#E'
	CALL INPUT
	GO TO (BEGIN,END), INXCTL
	IF (ENTRY.EQ.BLANKS) GO TO BEGIN
	PONUM(1,6) = ENTRY(1,6)
	ENTRY(1,6) = PONUM(1,6),'ZZZZXX'
	XCALL OUTPT (10,25,0,ENTRY(1,6),V)
	XCALL OUTPT (10,31,0,'-',V)

	CTL = '10,32,02,00,# '
	CALL INPUT
	GO TO (BEGIN), INXCTL
	XCALL FRMAT (ENTRY(1,2),2)
	PONUM(7,8) = ENTRY(1,2)
	XCALL OUTPT (10,32,0,PONUM(7,8),V)

	LOKCTL = 1
	XCALL ISIO (1,HEADER,PONUM,READ,LOKCTL)
	IF (LOKCTL.EQ.0) GO TO CALL1
	XCALL MESAG ('PURCHASE ORDER NOT ON FILE',V)
	HEADER =
	PONUM =
	GO TO BEGIN
CALL1,
	IF (HRLNUM.NE.0) GO TO CALL2
	POHEDR = HEADER
	OPT = 2
	EXITSW =
	UPDSW = 1
	XCALL LINE1 (POHEDR,OPT,EXITSW,UPDSW)
	HEADER = POHEDR
	IF (HCXCDE.EQ.'C') CALL REWRIT
	IF (EXITSW.EQ.1) GO TO BEGIN
	GO TO CALL1

CALL2,
	OPT = 2
	EXITSW =
	UPDSW = 1
	POHEDR = HEADER
	XCALL LINE2 (POHEDR,OPT,EXITSW,UPDSW)
	HEADER = POHEDR
	XCALL MESAG (HCXCDE,1)
	IF (HCXCDE.EQ.'C') CALL REWRIT
	IF (EXITSW.EQ.1) GO TO BEGIN
	GO TO CALL2
END,
	XCALL WATE (1,V)
INUS10,
	SWITCH = 4
	XCALL FILES (9,'SU',192,SWITCH)	
INUSE9,
	SWITCH = 4
	XCALL FILES (8,'SI',061,SWITCH)
INUSE8,
	SWITCH = 4
	XCALL FILES (7,'I',041,SWITCH)
INUSE7,
	SWITCH = 4
	XCALL FILES (6,'I',042,SWITCH)
INUSE6,
	SWITCH = 4
	XCALL FILES (3,'I',153,SWITCH)
INUSE3,
	SWITCH = 4
	XCALL FILES (2,'SU',152,SWITCH)
INUSE2,
	SWITCH = 4
	XCALL FILES (1,'SU',151,SWITCH)
INUSE1,
	RESTRT = 1
	XCALL PGCHN ('PO:POENMN',RESTRT)

;**********************************************************************
;	 REWRITES THE P/O HEADER WITH 'CHANGE' MARKED
;**********************************************************************

REWRIT,
	XCALL ISIO (1,HEADER,PORKEY,WRITE,LOKCTL)
	RETURN

;**********************************************************************

INPUT,
	XCALL INPUT (ROW,COL,MAX,MIN,TYPE,ENTRY,INXCTL,V)
	RETURN


END

