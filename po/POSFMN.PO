; POSFMN.PO
;
;
;		SPECIAL FUNCTION MENU
;
RECORD
	V	,D1
	ENTRY	,A3
	INXCTL	,D1
	PGM	,D2
;;;	PROGNM	,8A9,	'PO:PORDFL','PO:PVNMNT','PO:TBLMNU','PO:XXXXXX',
	PROGNM	,8A9,	'PO:PVNMNT','PO:TBLMNU','PO:TBLMNU','PO:XXXXXX',
&			'PO:XXXXXX','PO:XXXXXX','PO:XXXXXX','PO:XXXXXX'

PROC
	XCALL TERID (V)
	XCALL OUTPT (1,1,2,'PURCHASE ORDERS - SPECIAL FUNCTIONS',V)
	XCALL OUTPT (3,9,0,'PLEASE SELECT APPLICATION',1)
	XCALL OUTPT (5,15,0,'1. VENDOR MAINTENANCE',1)
	XCALL OUTPT (7,15,0,'2. PO TABLES',1)
;;;	XCALL OUTPT (9,15,0,'3. PO TABLES',1)

INPUT,
	XCALL INPUT (3,36,2,1,'#E',ENTRY,INXCTL,1)
	GOTO (INPUT,ENDOFF), INXCTL
	PGM = ENTRY(1,2)
	IF (PGM.LT.1.OR.PGM.GT.3) GOTO INPUT
	XCALL WATE (3,V)
	XCALL PGCHN (PROGNM (PGM),1)
ENDOFF,
	XCALL WATE(3,V)
	XCALL PGCHN ('PO:POMENU',1)
END
