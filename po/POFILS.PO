;  POFILS / POR - D11
;
;
;		PROGRAM TO DISPLAY CONTROL INFORMATION
;		ON ALL PURCHASE ORDER FILES
;
;
RECORD RECORD
		,A600
RECORD
	ALPHA	,A5
	PRFILS	,10D3,153,011,041,043,000,000,000,000,000,000
	SIZE	,D3
	CHAR	,A1
	ORGCNT	,D5
	RECCNT	,D5
	MAXCNT	,D5
	DELCNT	,D3
	N	,D2
	ROW	,D2
	LOKCTL	,D1
	NOABRT	,D1,	1
	READ	,D1,	0
	COL	,D2
	MAX	,D2
	DECMAL	,D18
	SWITCH	,D1,5
	V	,D1
PROC
	XCALL TERID(V)
	V = 1
	XCALL OUTPT(1,1,2,'DISPLAY PO & R FILE CONTROL DATA',V)
	XCALL OUTPT(4,27,0,'FILENAME  LENGTH  SORTED    USED',V)
	XCALL OUTPT(4,63,0,'MAX   DELETIONS',V)
	XCALL OUTPT(6,1,0,'P/O TABLES FILE            PORTBL',V)
	XCALL OUTPT(8,1,0,'VENDOR MASTER FILE         VENMAS',V)
	XCALL OUTPT(10,1,0,'ITEM MASTER FILE           ITMMAS',V)
	XCALL OUTPT(12,1,0,'INVENTORY TRX FILE         INVTRX',V)
	N =
LOOP,
	INCR N
	IF (N.GT.4) GO TO ENDDIS		;(01)
	ON ERROR NEXT
	XCALL FILES(1,'I',PRFILS(N),SWITCH)
	OFF ERROR
	IF (SWITCH.EQ.9) GO TO EXIT
	LOKCTL = NOABRT
	XCALL IO (1,RECORD,1,READ,LOKCTL)
	XCALL RSTAT(SIZE,CHAR)
	ORGCNT = RECORD (SIZE-17,SIZE-13)
	ORGCNT = ORGCNT - 1
	RECCNT = RECORD (SIZE-12,SIZE-8)
	RECCNT = RECCNT - 1
	MAXCNT = RECORD (SIZE-7,SIZE-3)
	MAXCNT = MAXCNT - 1
	DELCNT = RECORD (SIZE-2,SIZE)
	CLOSE 1
	ROW = 2 * (N + 2)
	COL = 37
	MAX = 3
	DECMAL = SIZE
	CALL DSPNUM
	COL = 46
	MAX = 5
	DECMAL = ORGCNT
	CALL DSPNUM
	COL = 54
	DECMAL = RECCNT
	CALL DSPNUM
	COL = 61
	DECMAL = MAXCNT
	CALL DSPNUM
	COL = 70
	MAX = 3
	DECMAL = DELCNT
	CALL DSPNUM
NEXT,
	GO TO LOOP
ENDDIS,
	XCALL MESAG(' ',2)
EXIT,
	XCALL WATE(3,V)
	XCALL PGCHN ('PO:POSFMN',1)
DSPNUM,
	ALPHA = DECMAL,'ZZZZX'
	XCALL OUTPT (ROW,COL,0,ALPHA,V)
	RETURN

END

