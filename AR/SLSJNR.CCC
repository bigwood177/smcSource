	IF (SMISC.NE.0) PLINE (71,78) = SMSACT, MASK2
	IF (STAX(1).NE.0) PLINE (83,90) = STXACT(1), MASK2
	IF (STAX(2).NE.0 .OR. STAX(3).NE.0) PLINE (83,90) = 
	IF (SFRGHT.NE.0) PLINE (94,101) = SFRACT, MASK2
	PLINE (108,115) = SARACT, MASK2
