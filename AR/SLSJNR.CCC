	TMISC = TMISC + SMISC
	TTAX = TTAX + WRKTAX
	TFRGHT = TFRGHT + SFRGHT
	TCOST = TCOST + SCOST
	TCOMM = TCOMM + SCOMM
	CALL PRINT

	XCALL DATE8(SDOCDT, D_OUT, D_OUTR, D_FMT, D_SW)
	PLINE (33,42) = D_FMT
	PLINE (51,52) = SSLMAN
;;;	PLINE (57,67) = SCOST, MASK
