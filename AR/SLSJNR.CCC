	IF (SNAME.EQ.']]]]]]') GO TO EOF
	IF (SNAME.EQ.'000000') GO TO READ
	IF (SCUSNO .NE. 63340) GOTO READ	;12-18-06 SSQ - ROCKFORD ONLY
BUFF,
	IF (DSTFLG.NE.'Y') GO TO SKPCNT
	CALL CNTDST
	IF (LINCNT+NUMDST+3.GT.60) LINCNT = 60
SKPCNT,
	PLINE (1,6) = SCUSNO
	PLINE (9,33) = SNAME
	PLINE (36,41) = SDOCNO
	PLINE (45,45) = SDOCTP
	PLINE (49,54) = SAPLNO
	IF (SAPLNO.EQ.-1) PLINE (49,54) = 'BAL-FW'
