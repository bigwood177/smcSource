	DRSAMT = DRSAMT + SSLAMT
	DRMISC = DRMISC + SMISC
	DRTAX = DRTAX + WRKTAX
	DRFRGH = DRFRGH + SFRGHT
	DRCOST = DRCOST + SCOST
	DRCOMM = DRCOMM + SCOMM
	GO TO CONTIN
