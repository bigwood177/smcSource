	XCALL SERCH (7,ARACCT,KEY,1,7,BSEND,BSMID,SRCCTL,4,32,37,0,0,0,0)
	IF (SRCCTL.EQ.1) ARACDS = '** ACCOUNT NOT ON FILE **'
	PLINE (44,73) = ARACDS
	IF (SDOCTP.EQ.3) SDAMTS (DISTIX) = (-1) * SDAMTS (DISTIX)
	PLINE (76,87) = SDAMTS (DISTIX), MASK
	CALL PRINT
	GO TO PRTDS1
