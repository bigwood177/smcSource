	PLINE (82,91) = WRKTAX, MASK
	PLINE (94,102) = SFRGHT, MASK
	PLINE (106,116) = SSLAMT + SMISC + WRKTAX + SFRGHT, MASK
;;;	PLINE (120,129) = SCOMM, MASK
