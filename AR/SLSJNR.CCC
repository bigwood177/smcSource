	IF (WRKTAX.EQ.0) GO TO NOTAX
	SLSAMT = SLSAMT + SSLAMT
	SLMISC = SLMISC + SMISC
	SLTAX = SLTAX + WRKTAX
	SLFRGH = SLFRGH + SFRGHT
	SLSCST = SLSCST + SCOST
	SLCOMM = SLCOMM + SCOMM
	GO TO CONTIN
