	FCSAMT = FCSAMT + SSLAMT
	FCMISC = FCMISC + SMISC
	FCTAX = FCTAX + WRKTAX
	FCFRGH = FCFRGH + SFRGHT
	FCCOST = FCCOST + SCOST
	FCCOMM = FCCOMM + SCOMM
	GO TO CONTIN
