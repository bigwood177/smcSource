	PRTTYP	,A1
	SLFRGH	,D8
	SLMISC	,D8
	SLSAMT	,D10
	SLSCST	,D10
	SLTAX	,D8
	SLCOMM	,D8
	pdffil	,a*,	'c:\smc\spool\slsjns.spl'
	SPLFIL	,A14
	MASK	,A14,	'ZZ,ZZZ,ZZZ.XX-'
	MASK2	,A8,	'XXXX-XXX'
	TFRGHT	,D8
	TMISC	,D8
	TRXCNT	,D4
	TSLAMT	,D10
	TTAX	,D8
	TCOST	,D10
	TCOMM	,D8
