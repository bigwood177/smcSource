	CRTAX	,D8
	CRCOMM	,D8
	DRCOST	,D10
	DRFRGH	,D8
	DRMISC	,D8
	DRSAMT	,D10
	DRTAX	,D8
	DRCOMM	,D8
	DSTFLG	,A1
	DISTIX	,D2
	FCCOST	,D9
