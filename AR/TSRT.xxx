;TSRT.DBL
RECORD	SRTREC

RECORD	FFILE
	FILNUM	,D3,	003
	REDFIL	,A14
	CLCTL	,D1

RECORD	SRTMSG
		,A*,	'DBSORT '
	SRTFIL	,A14

PROC
	XCALL FFILE (FILNUM,REDFIL,CLCTL)
	IF (CLCTL)
		BEGIN
		XCALL MESAG ("CAN'T FIND SPECIFIED FILE',1)
		STOP
		END

	SRTFIL = REDFIL
	XCALL OUTPT (1,1,2,SRTMSG,1)

	SORT (IN=REDFIL, RECORD=SRTREC,
&	      KEY=() )

	STOP
	END

